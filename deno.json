{
  "tasks": {
    "start": "deno run --allow-net --allow-read --allow-write dev-server.ts",
    "dev": "deno run --allow-net --allow-read --allow-write --watch dev-server.ts"
  },
  "compilerOptions": {
    "lib": ["dom", "deno.ns"]
  },
  "fmt": {
    "options": {
      "useTabs": false,
      "lineWidth": 80,
      "indentWidth": 2,
      "singleQuote": true,
      "proseWrap": "preserve"
    }
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  }
}
