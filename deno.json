{
  "tasks": {
    "start": "deno run --allow-net --allow-read https://deno.land/std/http/file_server.ts src/",
    "dev": "deno run --allow-net --allow-read --watch https://deno.land/std/http/file_server.ts src/"
  },
  "compilerOptions": {
    "lib": ["dom", "deno.ns"]
  },
  "fmt": {
    "options": {
      "useTabs": false,
      "lineWidth": 80,
      "indentWidth": 2,
      "singleQuote": true,
      "proseWrap": "preserve"
    }
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  },
  "importMap": "./import_map.json"
}