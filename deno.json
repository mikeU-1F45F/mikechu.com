{
  "tasks": {
    "start": "live-server --port=3000 --host=localhost --entry-file=./src/index.html",
    "dev": "live-server --port=3000 --host=localhost --entry-file=./src/index.html"
  },
  "compilerOptions": {
    "lib": ["dom", "deno.ns"]
  },
  "fmt": {
    "options": {
      "useTabs": false,
      "lineWidth": 80,
      "indentWidth": 2,
      "singleQuote": true,
      "proseWrap": "preserve"
    }
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  }
}
